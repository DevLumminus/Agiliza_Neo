<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="?attr/colorSurface"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/BarraTopo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFC107"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/toolbar_menu"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:navigationIconTint="@color/black"
        app:title="Agiliza Neo"
        app:titleCentered="true"
        app:titleTextColor="#000000"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BotãoAdd"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:background="@drawable/botao_selector"
        android:fontFamily="sans-serif-medium"
        android:text="Vamos Agilizar"
        android:textColor="@color/text_botao_selector"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintVertical_bias="0.60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BarraTopo" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/BotãoAdd"
        app:layout_constraintBottom_toBottomOf="@id/BarraCustomizada"/>

    <LinearLayout
        android:id="@+id/BarraCustomizada"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent">
    
        <FrameLayout
            android:id="@+id/btAdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:foreground="@drawable/ripple_custom"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconPlus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_plus"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btCalendar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:foreground="@drawable/ripple_custom"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconCalendar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_calendar"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btEstatistica"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:foreground="@drawable/ripple_custom"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconEstatistica"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_bar_chart"/>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>